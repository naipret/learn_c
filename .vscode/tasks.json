//! I RECOMMEND USING THE COMMAND LINE
//  so there are not many configs!
//  because there are a lot of tutorials on the internet and its pretty easy to learn:D
//  and task.json is dumb;-;

//? WHERE TO LEARN (my opinion)
//  how to use g++ or gcc -> everywhere in the internet:>
//  difference between g++ and gcc -> https://stackoverflow.com/questions/172587/what-is-the-difference-between-g-and-gcc
//  some g++ flag -> https://caiorss.github.io/C-Cpp-Notes/compiler-flags-options.html
//  how to compile step by step -> https://www.hep.phy.cam.ac.uk/~wfawcett/posts/compilers-and-linkers.html
//  why some people avoid using the -O3 flag -> https://www.reddit.com/r/cpp/comments/wsaffa/is_there_any_reason_to_not_use_the_o3_g_flag_when/

//* STYLE 1 (for simple file)
//  g++ [flags] [path/to/main.cpp] [-o [path/to/output_executable]]
//  -> g++ [-Ox] -Wall -Werror -Wpedantic -fdiagnostics-color=always -g path/to/main.cpp [-o path/to/output_executable]

//* STYLE 2.1 (for multiple files)
//  g++ [flags] [path/to/main.cpp] [path/to/sources.cpp] -I[path/to/include/folder] -L[path/to/library/folder] -l[library_name] [-o [path/to/output_executable]]
//  -> g++ [-Ox] -Wall -Werror -Wpedantic -fdiagnostics-color=always -g path/to/main.cpp path/to/sources.cpp -Ipath/to/include/folder [-o path/to/output_executable]

//* STYLE 2.2 (.cpp -> .obj -> .out)
//  g++ [flags] -c [path/to/main.cpp] -I[path/to/include/folder] [-o [path/to/object_1.o]] && g++ [flags] -c [path/to/sources.cpp] -I[path/to/include/folder] [-o [path/to/object_2.o]] && g++ [flags] [path/to/object_1.o] [path/to/object_1.o]  [-o [path/to/output_executable]]
//  -> g++ [-Ox] -Wall -Werror -Wpedantic -fdiagnostics-color=always -c path/to/source_1.cpp path/to/source_2.cpp ... -o path/to/source_1.o path/to/source_2.o path/to/sources.cpp -Ipath/to/include/folder -o path/to/output_executable
//  g++ [-Ox] -Wall -Werror -Wpedantic -fdiagnostics-color=always -c path/to/main.cpp -Ipath/to/include/folder [-o path/to/object_1.o] && g++ [-Ox] -Wall -Werror -Wpedantic -fdiagnostics-color=always -c path/to/sources.cpp -Ipath/to/include/folder [-o path/to/object_2.o] && g++ [-Ox] -Wall -Werror -Wpedantic -fdiagnostics-color=always -g path/to/object_1.o path/to/object_1.o  [-o path/to/output_executable]

{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[UBUNTU] C/C++: g++ build active file",
            "type": "cppbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                // "-Werror",
                // "-O3",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "[UBUNTU] Task generated by Debugger."
        },
        {
            "label": "[WINDOWS] C/C++: g++.exe build active file",
            "type": "cppbuild",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                // "-Werror",
                // "-O3",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "[WINDOWS] Task generated by Debugger."
        }
    ]
}
